<Window x:Class="AMP_SalesOrderManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMP_SalesOrderManager"
        mc:Ignorable="d"
        Title="SalesOrder Manager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0,1*"/>
            <RowDefinition Height="0,6*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Auftragliste" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="230"/>
        </Grid>

        <Grid Grid.Row="1">
            <DataGrid x:Name="SalesOrderGrid" HorizontalAlignment="Left" Height="288" Margin="10,10,0,0" VerticalAlignment="Top" Width="772"/>
            <Button Name="btnUpdateNav" Content="VK Aufträge aktualisieren" Click="btnUpdateSalesOrderPage_Click"  HorizontalAlignment="Left" Grid.Column="0" Width="110" Height="20" VerticalAlignment="Top" Margin="10,316,0,0"/>
        </Grid>
    </Grid>
</Window>
